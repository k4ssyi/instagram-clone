<%= form_for(@micropost) do |f| %>
  <%#= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
  </div>
  <div class="form-group">
    画像:
    <%= f.file_field :picture %>
  </div>
  <%= f.submit "投稿", class: "btn btn-primary" %>
<% end %>
